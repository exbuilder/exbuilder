{
    "title": "Welcome to exbuilder's experiment server!",
    "description": "You can configure the settings for this page in the config.json file inside the exbuilder folder. Complete the form below to generate the URL for your experiment. ",
    "form": [
        {
            "name": "experiment",
            "type": "select",
            "options": ["experiment 1 jspsych example", "experiment 2 pcibex example", "experiment 3 psychojs example"],
            "default": "",
            "description": "participant id from source database"
        },
        {
            "name": "condition",
            "type": "select",
            "default": "",
            "description": "participant id from source database"
        },
        {
            "name": "sourcedb",
            "type": "select",
            "options": ["prolific", "mturk", "sona", "salesforce"],
            "default": "",
            "description": "recruitment source database"
        },
        {
            "name": "participant",
            "type": "input",
            "default": "",
            "description": "participant's id in source database"
        },
        {
            "name": "researcher",
            "type": "select",
            "options": ["your name", "your colleagues name", "another name"],
            "default": "",
            "description": "researcher who ran the participant"
        },
        {
            "name": "location",
            "type": "select",
            "options": ["online", "lab room 1", "lab room 2"],
            "default": "",
            "description": "location participant was run"
        }

    ]

}